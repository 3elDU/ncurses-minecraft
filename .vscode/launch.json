                {
                    "description": "Включить автоматическое форматирование для gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "C/C++: gcc сборка активного файла",
            "miDebuggerPath": "/usr/bin/gdb"
        }
    ]
